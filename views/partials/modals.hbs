<!------ ADD ACCOUNT MODAL ------->
<div class="modal fade" id="addAccModal">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-lg fa-user-plus"></i>Add new student</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" action="../student/addAcc" class="needs-validation">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Full Name</label>
                            <input type="text" class="form-control" name="addAcc_fullname" placeholder="Juan dela Cruz">
                            <small id="addAcc_fullname" class="form-text errText d-none">Please enter student's full name.</small>
                        </div>
                        <div class="form-group col-md-6">
                            <label>School</label>
                            <input type="text" class="form-control" placeholder="PAREF Southridge" name="addAcc_school">
                            <small id="addAcc_school" class="form-text errText d-none">Please enter name of school.</small>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Email</label>
                            <input type="email" class="form-control" placeholder="Email" name="addAcc_email">
                            <small id="addAcc_email" class="form-text errText d-none">Please enter valid email address.</small>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Contact #</label>
                            <input type="tel" class="form-control" placeholder="0917XXXXXXX" name="addAcc_contact">
                            <small id="addAcc_contact" class="form-text errText d-none">Please enter valid contact number.</small>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" class="form-control" placeholder="1234 Main St" name="addAcc_address">
                        <small id="addAcc_address" class="form-text errText d-none">Please enter address of student.</small>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="addAcc_check">
                            <label class="form-check-label">
                                Creating an account will generate a password
                            </label>
                        </div>
                    </div>
                </form>
                <button type="button" class="btn btn-success" id="addAccBtn">Add account<i class="fas fa-plus"></i></button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>