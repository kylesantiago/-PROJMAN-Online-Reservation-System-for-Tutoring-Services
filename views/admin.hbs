                                <button class="btn btn-custom tuteeBtn"><i class="fas fa-edit"></i>Edit</button>
                                <button class="btn btn-warning tuteeBtn"><i class="fas fa-coins"></i>Bill</button>
                                <button class="btn btn-danger tuteeBtn"><i class="far fa-times-circle"></i>Disable</button>
                            </div>
                        </div>
                    </div>
